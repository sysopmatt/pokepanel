<!-- styles -->
<link href="/lib/bootstrap/css/bootstrap.css" rel="stylesheet">
<link id="size-stylesheet" href="/stylesheets/style.css" rel="stylesheet">
<script src="/lib/jquery/jquery-3.1.1.min.js"></script>
<script src="/lib/bootstrap/js/bootstrap.min.js"></script>
<script src="/lib/ejs/ejs.js"></script>
<script src="http://spin.js.org/spin.min.js"></script>

<meta name="viewport" content="device-width, initial-scale=1">

<script>
var runOnce = 'true';

function adjustStyle(width) {
if (runOnce=='true'){
	width = parseInt(width);
	  if (width < 800) {
	    $("#size-stylesheet").attr("href", "/stylesheets/style-mobile.css");
	  } else {
	     $("#size-stylesheet").attr("href", "/stylesheets/style.css"); 
	  }
	}
}
$(document).ready(function() {

  adjustStyle($(this).width());
  $(window).resize(function() {
    adjustStyle($(this).width());
  });

runOnce = 'false';

});
</script>