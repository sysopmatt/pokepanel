<% layout('layout') -%>

<script>
      $(function () {


        $('form').on('submit', function (e) {

          e.preventDefault();
		  $('.body-lower').html('<legend>Renaming the following:</legend><p>Processing... This may take a few seconds.');
          $.ajax({
            type: 'post',
            url: '/',
            data: $('form').serialize(),
            success: function (response) {
              $('.body-lower').html(response);
            }
            
          });

        });

      });
</script>

<script>
	$(document).ready(function(){
	    $('[data-toggle="popover"]').popover();
	});
</script>

<div class="body-main">
        

	<form class="form-horizontal">

	<!-- Form Name -->
	<legend>Account Info</legend>
	
	<!-- Text input-->
	<div class="form-group">
	  <label class="col-md-4 control-label" for="textinput" >Username</label>  
	  <div class="col-md-4">
	  <input id="email" name="email" type="text" placeholder="username" class="form-control input-md" autocorrect="off"> 
	  </div>
	</div>
	
	<!-- Password input-->
	<div class="form-group">
	  <label class="col-md-4 control-label" for="password">Password</label>
	  <div class="col-md-4">
	    <input id="password" name="password" type="password" placeholder="password" class="form-control input-md">
	  </div>
	</div>
	
	<!-- Multiple Radios (inline) -->
	<div class="form-group">
	  <label class="col-md-4 control-label" for="radios">Account Type</label>
	  <div class="col-md-4"> 
	    <label class="radio-inline" for="google">
	      <input type="radio" name="method" id="google" value="google" checked="checked">
	      Google
	    </label> 
	    <label class="radio-inline" for="ptc">
	      <input type="radio" name="method" id="ptc" value="ptc">
	      PTC
	    </label> 
	  </div>
	</div>
	
	<!-- Multiple Radios (inline) -->
	<div class="form-group">
	  <label class="col-md-4 control-label" for="radios">Naming scheme</label>
	  <div class="col-md-4"> 
	    <label class="radio-inline" for="percentage">
	      <input type="radio" name="scheme" id="percentage" value="percentage" checked="checked">
	      IV percentage with Pokemon type <a href="#" data-toggle="popover" title="Click image to close" data-html="true" data-trigger="hover" data-placement="bottom" data-content="<img src='/images/percentage.small.png' width='200' />">(info)</a>
	    </label>
	    <br>
	    <label class="radio-inline" for="raw">
	      <input type="radio" name="scheme" id="raw" value="raw">
	      Raw IV's (Total:Stamina.Attack.Defense) <a href="#" data-toggle="popover" title="Click image to close" data-html="true" data-trigger="hover" data-placement="bottom" data-content="<img src='/images/raw.small.png' width='200' />">(info)</a>
	    </label> 
	  </div>
	</div>
	
	<!-- Multiple Checkboxes -->
	<div class="form-group">
	  <label class="col-md-4 control-label" for="checkboxes">Additional options</label>
	  <div class="col-md-4">
	  <div class="checkbox">
	    <label for="commas">
	      <input type="checkbox" name="reset_commas" id="reset_commas" value="yes">
	      Reset commas 
	    </label>
		</div>
      </div>
	</div>
	
	<!-- Button -->
	<div class="form-group">
	  <label class="col-md-4 control-label" for="submit"></label>
	  <div class="col-md-4">
	    <button id="submit" name="submit" class="btn btn-primary">Submit</button>
	  </div>
	</div>
	
	</fieldset>
	</form>
</div>

<div class="body-lower">
      <% include includes/usage.ejs%>
</div>
	
